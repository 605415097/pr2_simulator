<launch>
  <include file="$(find pr2_alpha)/sim.machine"/>
  <!-- start up empty world -->
  <include file="$(find gazebo)/launch/empty_world.launch"/>

  <!-- upload urdf -->
  <include file="$(find pr2_defs)/launch/upload_pr2.launch" />

  <!-- spawn pr2 robots -->
  <node name="spawn_pr2_1_urdf" pkg="gazebo_tools" type="spawn_gazebo_model" args="robot_description -x 0 -y  1 -m pr2_1 -n pr2_1" respawn="false" output="screen" />
  <node name="spawn_pr2_2_urdf" pkg="gazebo_tools" type="spawn_gazebo_model" args="robot_description -x 0 -y  0 -m pr2_2 -n pr2_2" respawn="false" output="screen" />
  <node name="spawn_pr2_3_urdf" pkg="gazebo_tools" type="spawn_gazebo_model" args="robot_description -x 0 -y -1 -m pr2_3 -n pr2_3" respawn="false" output="screen" />

  <!-- Controller Manager -->
  <include file="$(find pr2_controller_manager)/controller_manager.launch" ns="pr2_1" />
  <include file="$(find pr2_controller_manager)/controller_manager.launch" ns="pr2_2" />
  <include file="$(find pr2_controller_manager)/controller_manager.launch" ns="pr2_3" />

</launch>

