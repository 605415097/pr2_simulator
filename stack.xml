<stack name="pr2_simulator" version="0.1">
  <description brief="PR2 Simulation Plugins">
    Plugins and resources for using simulators with PR2.
    Launch scripts and basic regression tests for PR2 simulation.
  </description>
  <author>John Hsu johnhsu@willowgarage.com</author>
  <license>BSD</license>
  <review status="unreviewed" notes=""/>
  <url>http://ros.org/wiki/pr2_simulator</url>
  <!-- released stacks -->
  <depend stack="geometry" /> <!-- angles, bullet -->
  <depend stack="common_msgs" /> <!-- diagnostic_msgs, geometry_msgs, nav_msgs, sensor_msgs -->
  <depend stack="simulator_gazebo" /> <!-- gazebo -->
  <depend stack="physics_ode" /> <!-- opende -->
  <depend stack="image_common" /> <!-- image_transport used by prosilica_camera plugin -->
  <depend stack="vision_opencv" /> <!-- cv_bridge used by prosilica camera plugin -->
  <depend stack="camera_drivers" /> <!-- prosilica_cam -->
  <depend stack="common" /> <!-- tinyxml, xacro -->
  <depend stack="robot_model" /> <!-- urdf, convex_decomposition, ivcon -->
  <depend stack="ros" /> <!-- std_msgs, roscpp, rospy -->
  <depend stack="visualization_common"/> <!-- ogre_tools --> 
  <depend stack="diagnostics" /> <!-- used by prosilica_camera and pr2_controller_manager -->
  <!-- unreleased stacks -->
  <depend stack="pr2_mechanism" /> <!-- pr2_hardware_interface, pr2_controller_manager, pr2_mechanism_model -->
  <depend stack="image_pipeline" /> <!-- stereo_msgs, stereo_image_proc -->
  <depend stack="controllers" /> <!-- control_toolbox used by pr2_mechanism_controllers and robot_mechanism_controllers -->
  <depend stack="pr2_common" /> <!-- pr2_msgs -->
  <depend stack="manipulation_common" /> <!-- trajectory used by pr2_controller_manager, trajectory_msgs(manipulation_msgs) by robot_mechanism_controllers -->

  <!-- referenced non-stack packages -->
  <!--depend stack=""/--> <!-- wg-ros-pkg/pr2/pr2_default_controllers --> 
  <!--depend stack=""/--> <!-- wg-ros-pkg/nav/teleop_base --> 
  <!--depend stack=""/--> <!-- wg-ros-pkg/pr2/teleop/teleop_arm_kebyoard --> 

  <!-- added for tests -->
  <depend stack="laser_pipeline"/> <!-- laser_filters --> 
</stack>
